<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>


    <!--  DIY style for button in MainMenu  -->
    <style name="CustomButton_for_MainMenu" >
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/btn_blue</item>
        <item name="android:textColor">@color/sudoku_btn_text</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="CustomButton_for_MainMenu_land" >
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/btn_blue</item>
        <item name="android:textColor">@color/sudoku_btn_text</item>
        <item name="android:textSize">17sp</item>
    </style>

    <!--  DIY style for button in keypad  -->
    <style name="CustomButton_for_Keypad" >
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/btn_blue</item>
        <item name="android:textColor">@color/keypad_text</item>
        <item name="android:textSize">17sp</item>
    </style>

</resources>
